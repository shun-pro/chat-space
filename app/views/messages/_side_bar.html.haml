.chat-side
  .side-header
    .side-header__box 
      .side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__edit
        =link_to edit_user_path(current_user) do
          =icon("fa" , "edit")
        %li.side-header__box__menu__config
        =link_to edit_user_path(current_user) do
          =icon("fa", "cog")

  .groups 
    .group 
      .group__name 
      %p グループ名
      .group__latest-message 
      %p コメント
